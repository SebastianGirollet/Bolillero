<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#EFEFEF">

    <EditText
        android:id="@+id/minInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número mínimo"
        android:inputType="number" />

    <EditText
        android:id="@+id/maxInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número máximo"
        android:inputType="number"
        android:layout_below="@id/minInput"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Sortear!"
        android:layout_below="@id/maxInput"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/ballNumber"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="?"
        android:gravity="center"
        android:textSize="64sp"
        android:textStyle="bold"
        android:background="@drawable/ball_background"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/startButton"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/historyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ballNumber"
        android:layout_marginTop="24dp"
        android:text="Historial: "
        android:textSize="16sp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:layout_below="@id/historyText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>